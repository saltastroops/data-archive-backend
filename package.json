{
  "name": "data-archive-backend",
  "version": "1.0.0",
  "description": "\"SALT/SAAO Data Archive API Server\"",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "start": "pm2 start src/index.ts --name data-archive-api --node-args='-r dotenv/config'",
    "restart": "pm2 restart data-archive-api --node-args='-r dotenv/config'",
    "dev": " export DEBUG=\"nodemon\"; nodemon -e ts,graphql -x ts-node -r dotenv/config src/index.ts",
    "test": "NODE_ENV=test jest --detectOpenHandles",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "format": "prettier --write '{*.json,src/**/*.{js,ts,tsx,json,graphql}}'",
    "lint": "tslint 'src/**/*.{ts,tsx}'",
    "lint:fix": "tslint --fix 'src/**/*.{ts,tsx}'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chynamyerz/ssda-server.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/chynamyerz/ssda-server/issues"
  },
  "homepage": "https://github.com/chynamyerz/ssda-server#readme",
  "dependencies": {
    "@sentry/node": "^5.15.4",
    "@types/archiver": "^3.0.0",
    "@types/bcrypt": "^3.0.0",
    "@types/body-parser": "^1.17.0",
    "@types/compression": "^1.0.1",
    "@types/connect-pg-simple": "^4.2.0",
    "@types/dotenv": "^6.1.0",
    "@types/express-session": "^1.15.11",
    "@types/graphql": "^14.0.5",
    "@types/moment": "^2.13.0",
    "@types/mysql2": "types/mysql2",
    "@types/node": "^11.13.5",
    "@types/nodemailer": "^4.6.7",
    "@types/passport": "^1.0.0",
    "@types/passport-local": "^1.0.33",
    "@types/pg": "^7.11.1",
    "@types/ramda": "^0.26.18",
    "@types/supertest": "^2.0.7",
    "@types/uuid": "^3.4.5",
    "archiver": "^3.0.3",
    "bcrypt": "^3.0.6",
    "body-parser": "^1.18.3",
    "compression": "^1.7.4",
    "connect-pg-simple": "^6.1.0",
    "dataloader": "^1.4.0",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "express-session": "^1.15.6",
    "fs": "^0.0.1-security",
    "graphql-yoga": "^1.17.1",
    "isemail": "^3.2.0",
    "moment": "^2.24.0",
    "mysql2": "^1.7.0",
    "nodemailer": "^6.1.0",
    "nodemon": "^1.18.9",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "pg": "^7.12.1",
    "prisma-client-lib": "^1.25.4",
    "ramda": "^0.26.1",
    "title-case": "^3.0.2",
    "ts-node": "^8.0.2",
    "ts-promisify": "^3.3.2",
    "typescript": "^3.2.4",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/dotenv": "^6.1.0",
    "@types/express-session": "^1.15.11",
    "@types/graphql": "^14.0.5",
    "@types/jest": "^23.3.13",
    "@types/passport": "^1.0.0",
    "@types/passport-local": "^1.0.33",
    "@types/supertest": "^2.0.7",
    "husky": "^1.3.1",
    "jest": "^24.7.1",
    "lint-staged": "^8.1.1",
    "prettier": "^1.16.1",
    "supertest": "^3.4.2",
    "ts-jest": "^24.0.2",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.17.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{package.json,src/**/*.{js,ts,tsx,json,css,graphql,md}}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "roots": [
      "<rootDir>"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "setupFiles": [
      "<rootDir>/jest/setEnvVars.js"
    ]
  }
}
